                <div id="add">

                  <form method="post" action="/api/criminal-record/casier/add/">
                    <div class="row">
                        <div class="input-field col s6">
                          <input name="nom" id="firstname-add" type="text" class="validate" required placeholder="John Doe">
                          <label for="firstname-add" style="color: black">Noms</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="prenom" id="lastname-add" type="text" class="validate" required placeholder="Ladykiller">
                          <label for="lastname-add" style="color: black">Prenom</label>
                        </div>

                        <div class="input-field col s6">
                          <input name="genre" id="lastname-add" type="text" class="validate" required placeholder="M ou F">
                          <label for="lastname-add" style="color: black">Genre</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="vile" id="lastname-add" type="text" class="validate" required placeholder="Kinshasa">
                          <label for="lastname-add" style="color: black">Ville</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="taille" id="lastname-add" type="text" class="validate" required placeholder="160 Cm">
                          <label for="lastname-add" style="color: black">Taille</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="poid" id="lastname-add" type="text" class="validate" required placeholder="90 Kg">
                          <label for="lastname-add" style="color: black">Poid</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="vileBorn" id="lastname-add" type="text" class="validate" required placeholder="Lubumbashi">
                          <label for="lastname-add" style="color: black">Né à </label>
                        </div>
                        <div class="input-field col s6">
                          <input name="dateBorn" id="dob-add" type="text" class="validate" required placeholder="model: 1997-12-17">
                          <label for="dob-add" style="color: black">Date de naissance</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="codeI" id="lastname-add" type="text" class="validate" required placeholder="A-723">
                          <label for="lastname-add" style="color: black">Code d'infraction</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="inst" id="lastname-add" type="text" class="validate" required placeholder="Cour suprême de gombe">
                          <label for="lastname-add" style="color: black">Institution</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="charge" id="charge-add" type="text" class="validate" required placeholder="Meurtre">
                          <label for="charge-add" style="color: black">Charge(s)</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="sentence" id="term-add" type="text" class="validate" required placeholder="1Y 0M 0D">
                          <label for="term-add" style="color: black">Sentence</label>
                        </div>
                        <div class="input-field col s6">
                          <input name="date" id="date-add" type="text" class="validate" required placeholder="model: 2022-02-03">
                          <label for="date-add" style="color: black">Date</label>
                        </div>
                        <div class="input-field col s12">
                          <textarea name="desc" id="description-add" class="materialize-textarea"
                            required placeholder="À tué un civil.."></textarea>
                          <label for="description-add" style="color: black">Description</label>
                        </div>
                    </div>
                      <button class="btn-large btn-flat waves-effect waves-light col s12" id="submit-add">Ajouter</button>
                  </form>
                  <button class="btn-large btn-flat waves-effect waves-light col s12 back-add">Précedent</button>
                </div>
