          <div id="criminal-record-wrapper">

            <div id="menu">
              <div id="header">
                <div class="left">
                  <a href="/api/criminal-record/casier" class="logo"><img src="/images/logo.png" class="image" alt="LOGO"
                                                 draggable="false" /></a><br>
                   <h1>Casier Judiciaire</h1></a>

                </div>
                <div class="right" id="bar">
                  <ul>
                    <li>
                      <p>Created</p>
                      <p>01-12-2022</p>
                    </li>
                    <li>
                      <p>Version</p>
                      <p>1.0</p>
                    </li>
                    <p class="small-txt">Generated by the state computer</p>
                  </ul>
                </div>
              </div>

              <div class="row" id="menu-content">
                <div id="welcome">
                  <h1 class="right" id="date">XXXX-XX-XX</h1>
                  <p>Casier récemment enregistré..</p>
                  <table class="centered">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Code d'infraction</th>
                        <th>Institution</th>
                        <th>Charge et déscription</th>
                        <th>Sentence</th>
                        <th></th>
                      </tr>
                    </thead>
                      <tbody>

                      <% data.forEach(d => {%>
                      <tr>
                        <td><%= d.Date %></td>
                        <td><%= d.Code_d_infraction %></td>
                        <td><%= d.Institution %></td>
                        <td><%= d.Charge_s_ %></td>
                        <td><%= d.Sentence %></td>
                        <td><a href="/api/criminal-record/casier/<%= d.id_criminel %>"><button>ouvrire</button></a></td>
                      </tr>
                      <% }); %>
                      </tbody>
                  </table>

                  <button class="btn-large btn-flat waves-effect waves-light col s12" id="menu-search">Recherche</button>
                  <button class="btn-large btn-flat  waves-light col s12" id="menu-add">Ajouter un casier</button>
                </div>

                <div id="search">
                  <form method="post" action="/api/criminal-record/casier/search/" class="col s12">
                    <div class="row">
                      <div class="input-field col s6">
                        <input name="prenom" id="firstname-search" type="text" class="validate">
                        <label for="firstname-search">Prénom</label>
                      </div>
                      <div class="input-field col s6">
                        <input name="nom" id="lastname-search" type="text" class="validate">
                        <label for="lastname-search">Nom</label>
                      </div>
                    </div>
                    <button class="btn-large btn-flat waves-effect waves-light col s12">Recherche</button>
                  </form>
                  <button class="btn-large btn-flat waves-effect waves-light col s12 back-search">Précedent</button>
                </div>
